{
  "manifest_version": 3,
  "name": "Gemini Jump Sidebar",
  "description": "在Gemini中检测用户提问并在侧边栏列出，点击可快速跳回并高亮对应问题。",
  "version": "1.1",
  "permissions": ["storage"],
  "host_permissions": [
    "*://gemini.google.com/*",
    "*://aistudio.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://gemini.google.com/*",
        "*://aistudio.google.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
    }
}